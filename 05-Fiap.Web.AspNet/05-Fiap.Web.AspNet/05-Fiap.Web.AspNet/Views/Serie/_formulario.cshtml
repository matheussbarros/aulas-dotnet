@model Serie

<div class="form-group">
    <label asp-for="Nome"></label>
    <input class="form-control" asp-for="Nome" />
</div>
<div class="form-group">
    <label asp-for="Tipo"></label>
    <select class="form-control" asp-for="Tipo" asp-items="@Html.GetEnumSelectList<Genero>()">
        <option>Selecione</option>

    </select>
</div>
<div class="form-group">
    <label asp-for="DataLancamento"></label>
    <input type="date" class="form-control" asp-for="DataLancamento" />
</div>

<div class="form-group">
    <label asp-for="Temporadas"></label>
    <input class="form-control" asp-for="Temporadas" />
</div>