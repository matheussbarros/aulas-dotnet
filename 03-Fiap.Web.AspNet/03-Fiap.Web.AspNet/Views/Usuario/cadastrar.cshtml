@model  _03_Fiap.Web.AspNet.Models.Usuario;

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>cadastrar</h1>
 @if(Model != null) { <p>@Model.Nome, @Model.Email; @Model.DataNascimento</p>}




<div class="">
    <p>Nome: @ViewData["nome"]</p>
    <p>Data Nascimento: @ViewData["data"]</p>
    <p>Email: @ViewBag.endEletronico</p>
    <p>@TempData["msg"]</p>
</div>


<form class="form-group" action="/usuario/cadastrar" method="post">
    <div class="form-group">
        <label>Nome</label>
        <input class="form-control" type="text" name="Nome" value="" />
    </div>

    <div class="form-group">
        <label>Data de Nascimento</label>
        <input class="form-control" type="date" name="DataNascimento" value="" />
    </div>

    <div class="form-group">
        <label>E-mail</label>
        <input class="form-control" type="text" name="Email" value="" />
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit"> Cadastrar   </button>
    </div>

</form>