
@{
    ViewData["Title"] = "Cadastrar";
}


@model Time
<h1>Time</h1>



<form class="form" asp-action="Cadastrar" asp-controller="Time">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input class="form-control" asp-for="Nome" />
    </div>
    <div class="form-group">
        <label asp-for="DataFundacao"></label>
        <input type="date" class="form-control" asp-for="DataFundacao" />
    </div>
    <div class="form-group">
        <label asp-for="FolhaPagamento"></label>
        <input class="form-control" asp-for="FolhaPagamento" />
    </div>
    <div class="checkbox">
        <input type="checkbox" asp-for="Classificado">
        <label asp-for="Classificado">Classificado</label>
    </div>
    <div class="form-group">
        <label asp-for="Vitorias"></label>
        <input class="form-control" asp-for="Vitorias" />
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit">Cadastrar</button>
        <a asp-controller="Time" asp-action="Listar" class="btn btn-primary" type="submit">Listar</a>



    </div>

</form>

